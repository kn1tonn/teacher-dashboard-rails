<section class="space-y-6">
  <header class="flex flex-col gap-1">
    <h1 class="text-2xl font-semibold text-slate-900">Notifications</h1>
    <p class="text-sm text-slate-600">Stay updated on status changes and published feedback.</p>
  </header>

  <div class="space-y-3">
    <% if @notifications.blank? %>
      <div class="rounded-xl border border-dashed border-slate-300 bg-slate-50 p-6 text-center text-slate-500">
        No notifications yet. Youâ€™ll be notified as activity happens.
      </div>
    <% else %>
      <div class="space-y-3">
        <% @notifications.each do |notification| %>
          <article class="flex items-start gap-4 rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
            <div class="mt-1">
              <% if notification.read_at.present? %>
                <span class="inline-flex h-3 w-3 rounded-full bg-slate-300"></span>
              <% else %>
                <span class="inline-flex h-3 w-3 rounded-full bg-indigo-500"></span>
              <% end %>
            </div>
            <div class="flex-1 space-y-1 text-sm text-slate-700">
              <p class="font-medium text-slate-800"><%= notification_title(notification) %></p>
              <p class="text-slate-600"><%= notification_message(notification) %></p>
              <p class="text-xs text-slate-400">Received <%= time_ago_in_words(notification.created_at) %> ago</p>
            </div>
            <% if notification.read_at.blank? %>
              <div>
                <%= button_to "Mark as read",
                              notification_path(notification),
                              method: :patch,
                              class: "rounded-lg border border-slate-300 px-3 py-1 text-xs font-semibold text-slate-600 hover:text-slate-800" %>
              </div>
            <% end %>
          </article>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
