<section class="mx-auto w-full max-w-md space-y-6">
  <header class="space-y-2 text-center">
    <h1 class="text-2xl font-semibold text-slate-900">Sign in</h1>
    <p class="text-sm text-slate-600">Use your Google account or email address to access the dashboard.</p>
  </header>

  <div class="space-y-4 rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
    <div>
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="space-y-3">
      <%= render "devise/shared/google_oauth_button",
                 label: "Sign in with Google",
                 button_class: "flex w-full items-center justify-center gap-2 rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-indigo-500" %>
    </div>

    <div class="relative py-2 text-center text-xs uppercase tracking-wide text-slate-500">
      <span class="relative z-10 bg-white px-3">or use your email</span>
      <div class="absolute inset-x-0 top-1/2 h-px -translate-y-1/2 bg-slate-200"></div>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div class="space-y-2">
        <%= f.label :email, class: "text-sm font-medium text-slate-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" %>
      </div>

      <div class="space-y-2">
        <%= f.label :password, class: "text-sm font-medium text-slate-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <label class="flex items-center gap-2 text-sm text-slate-600">
          <%= f.check_box :remember_me, class: "rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" %>
          <span>Remember me</span>
        </label>
      <% end %>

      <div>
        <%= f.submit "Continue", class: "w-full rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-700" %>
      </div>
    <% end %>
  </div>

  <div class="text-center text-sm text-slate-600">
    <%= render "devise/shared/links" %>
  </div>
</section>
