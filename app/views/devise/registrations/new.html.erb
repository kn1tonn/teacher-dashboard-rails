<section class="mx-auto w-full max-w-md space-y-6">
  <header class="space-y-2 text-center">
    <h1 class="text-2xl font-semibold text-slate-900">Create your account</h1>
    <p class="text-sm text-slate-600">Sign up with Google for one-click access or create a password for email sign-in.</p>
  </header>

  <div class="space-y-4 rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
    <div>
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="space-y-3">
      <%= render "devise/shared/google_oauth_button",
                 label: "Sign up with Google",
                 button_class: "flex w-full items-center justify-center gap-2 rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-indigo-500" %>
    </div>

    <div class="relative py-2 text-center text-xs uppercase tracking-wide text-slate-500">
      <span class="relative z-10 bg-white px-3">or sign up with email</span>
      <div class="absolute inset-x-0 top-1/2 h-px -translate-y-1/2 bg-slate-200"></div>
    </div>

    <% registration_path =
         if respond_to?(:registration_path, true)
           registration_path(resource_name)
         else
           helper = "#{resource_name}_registration_path"
           if respond_to?(helper, true)
             public_send(helper)
           elsif main_app.respond_to?(helper, true)
             main_app.public_send(helper)
           end
         end %>

    <%= form_for(resource, as: resource_name, url: registration_path, html: { class: "space-y-4" }) do |f| %>
      <div class="space-y-2">
        <%= f.label :name, class: "text-sm font-medium text-slate-700" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" %>
      </div>

      <div class="space-y-2">
        <%= f.label :email, class: "text-sm font-medium text-slate-700" %>
        <%= f.email_field :email, autocomplete: "email", class: "w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" %>
      </div>

      <div class="space-y-2">
        <div class="flex items-center justify-between text-sm">
          <%= f.label :password, class: "font-medium text-slate-700" %>
          <% if @minimum_password_length %>
            <span class="text-slate-500"><%= @minimum_password_length %> characters minimum</span>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" %>
      </div>

      <div class="space-y-2">
        <%= f.label :password_confirmation, class: "text-sm font-medium text-slate-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" %>
      </div>

      <div>
        <%= f.submit "Create account", class: "w-full rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-700" %>
      </div>
    <% end %>
  </div>

  <div class="text-center text-sm text-slate-600">
    <%= render "devise/shared/links" %>
  </div>
</section>
