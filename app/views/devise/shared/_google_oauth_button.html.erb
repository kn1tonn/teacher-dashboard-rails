<%
  button_classes = local_assigns.fetch(:button_class) do
    "inline-flex w-full items-center justify-center gap-2 rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 transition hover:border-indigo-300 hover:text-indigo-600"
  end
  button_label = local_assigns.fetch(:label, "Continue with Google")
  submit_path = local_assigns.fetch(:path, user_google_oauth2_omniauth_authorize_path)
%>

<%= form_with url: submit_path,
              method: :post,
              data: { turbo: false },
              authenticity_token: true,
              local: true do %>
  <button type="submit" class="<%= button_classes %>">
    <%= button_label %>
  </button>
<% end %>
